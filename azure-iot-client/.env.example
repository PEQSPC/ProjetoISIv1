# Azure IoT Hub Configuration
# Copy this file to .env and fill in your actual connection string

# Azure IoT Hub Device Connection String
# Get this from Azure Portal > IoT Hub > Devices > [Your Device] > Primary Connection String
AZURE_IOT_CONNECTION_STRING="HostName=your-hub-name.azure-devices.net;DeviceId=your-device-id;SharedAccessKey=your-shared-access-key"

# Optional: IoT Plug and Play Model ID
# AZURE_IOT_MODEL_ID="dtmi:com:example:Thermostat;1"
